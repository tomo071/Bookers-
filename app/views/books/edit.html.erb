<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="errors">
    <div class="erros_count">
    <%= @book.errors.count %>errors prohibited this book from being saved:
    </div>
    <div class="errors_message">
    <ul>
      <%@book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
  </div>
<% end %>
<%= form_with model:@book, url: book_path(@book.id),method: :patch do |f| %>
  <div class="field">
  <label>title</label>
  <%= f.text_field:title %>
  </div>
  <div class="field">
  <label>body</label>
  <%= f.text_field:body%>
  </div>
  <div class="actions">
  <%= f.submit'Update Book'%>
  </div>
  <% end %>
  
  <%= link_to"show", book_path(params[:id])%> |
  <%= link_to"back", books_path%>
  