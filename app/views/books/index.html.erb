<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%=book.title%></td>
      <td><%=book.body%></td>
      <td><%=link_to "show", book_path(book.id) %></td>
      <td><%=link_to "edit", edit_book_path(book.id) %></td>
      <td><%=link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>

<% end %>
  </tbody>
</table>
<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="errors">
    <div class="erros_count">
    <%= @book.errors.count %>errors prohibited this book from being saved:
    </div>
    <div class="errors_message">
    <ul>
      <%@book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model:@book do |f| %>
  <div class="field">
  <label>title</label>
  <%= f.text_field:title %>
  </div>
  <div class="field">
  <label>body</label>
  <%= f.text_field:body%>
  </div>
  <div class="actions">
  <%= f.submit'Create Book'%>
  </div>
  <%end%>

